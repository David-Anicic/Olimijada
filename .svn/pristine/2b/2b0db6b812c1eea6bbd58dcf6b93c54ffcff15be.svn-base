<div *ngIf="this.rezultati != undefined && this.rezultati != null && this.rezultati.length > 0" style="max-height: 500px; overflow: auto">
	<div>
		<h3>{{'Rang lista' | translate}} - {{ turnir.naziv}}({{ igra.naziv }})</h3>


		<mat-form-field class="pretraga" style="width: 100%">
			<input matInput (keyup)="applyFilter($event.target.value)" placeholder="{{'pretraga' | translate}}">
		</mat-form-field>


		<mat-table #table [dataSource]="dataSource" matSort>


			<ng-container matColumnDef="korisnik">
				<mat-header-cell *matHeaderCellDef> {{'Korisnik' | translate}} </mat-header-cell>
				<mat-cell *matCellDef="let rezultat">
					{{rezultat.username}}
				</mat-cell>
			</ng-container>

			<ng-container matColumnDef="pobedePorazi">
				<mat-header-cell *matHeaderCellDef> {{'Pobede/porazi' | translate}} </mat-header-cell>
				<mat-cell *matCellDef="let rezultat">
					{{rezultat.brojPobeda }} / {{rezultat.brojPoraza}}
				</mat-cell>
			</ng-container>

			<!-- Ne znam sta se desava, prikazuju se samo prazni redovi

			<ng-container matColumnDef="korisnik">

			<mat-header-cell *matHeaderCellDef style="min-width: 240px!important;"> Takmiƒçari </mat-header-cell>

			<mat-cell *matCellDef="let rezultat" style="min-width: 240px!important;">

				<div class="sakrij">
					<div class="igrac" routerLink="/profil/{{rezultat.username}}">
						<img src="{{ruta}}upload/slike/{{rezultat.avatar}}" class="slikaAvatar">
						<span class="igrac"> {{rezultat.username}} </span>
					</div>
				</div>


				<div class="zaPrikazatiNaTelefonu">
					<div class="centriraj">

						<div class="igraci">
								<div class="igrac" routerLink="/profil/{{rezultat.username}}">
									<img src="{{ruta}}upload/slike/{{rezultat.avatar}}" class="slikaAvatar">
									<span class="igrac"> {{rezultat.username}} </span>
								</div>
						</div>

						<h3 style="text-align: center; margin: 2px;">{{rezultat.brojPobeda || 0 }} / {{rezultat.brojPoraza || 0}}</h3>

					</div>
				</div>
			</mat-cell>

		</ng-container>

		<ng-container matColumnDef="pobedePorazi" style="width: 58px!important; min-width: 58px!important; max-width: 58px!important;"
		 class="sakrij">
			<mat-header-cell *matHeaderCellDef style="width: 58px!important; min-width: 58px!important; max-width: 58px!important;" class="sakrij">
			Rezultat </mat-header-cell>
			<mat-cell *matCellDef="let rezultat" style="width: 58px!important; min-width: 58px!important; max-width: 58px!important;" class="sakrij">
					{{rezultat.brojPobeda || 0 }} / {{rezultat.brojPoraza || 0}}
			</mat-cell>
		</ng-container>
		-->




			<mat-header-row *matHeaderRowDef="displayedColumns"></mat-header-row>
			<mat-row *matRowDef="let row; columns: displayedColumns;"></mat-row>
		</mat-table>

		<!-- <mat-paginator #paginator [pageSize]="5" [pageSizeOptions]="[5,10, 20]" [showFirstLastButtons]="true">
		</mat-paginator> -->

	</div>

</div>
<div *ngIf="this.rezultati == undefined || this.rezultati == null || this.rezultati.length == 0">
	<h3>{{'Nema rezultata' | translate}}</h3>
</div>