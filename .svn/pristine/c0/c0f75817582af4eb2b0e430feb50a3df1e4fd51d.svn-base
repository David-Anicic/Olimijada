<div class="divZaTurnire">
  <mat-accordion>
    <mat-expansion-panel>
      <mat-expansion-panel-header>
        <mat-panel-title>
          <h3>{{'kreirajTurnir' | translate}}</h3>
        </mat-panel-title>
      </mat-expansion-panel-header>
      <app-turniri></app-turniri>
    </mat-expansion-panel>



    <mat-expansion-panel (opened)="true" [expanded]="true">
      <mat-expansion-panel-header>
        <mat-panel-title>
          <h3>{{'spisakTurnira' | translate}}</h3>
        </mat-panel-title>
      </mat-expansion-panel-header>
      <ng-template matExpansionPanelContent>
      <app-prikaz-turnira></app-prikaz-turnira>
      </ng-template>
    </mat-expansion-panel>

  </mat-accordion>
</div>
