                    <button mat-icon-button color="accent"  *ngIf="!authService.DaLiJePrijavljen()" class="dugmekontrole neceDaMoze" matTooltip="{{'Moras biti ulogovan da bi video profil' | translate}}!"><mat-icon>account_circle</mat-icon></button>

                </mat-cell>
            </ng-container>

            <mat-header-row *matHeaderRowDef="displayedColumns"></mat-header-row>
            <mat-row *matRowDef="let row; columns: displayedColumns;"></mat-row>
		</mat-table>

