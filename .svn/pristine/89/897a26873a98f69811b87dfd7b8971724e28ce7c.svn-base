					<div class="pobeda"></div>
                    <!--<div class="pobeda" matTooltip="Jelena : Nikola, 29.05.1991, Kraljevo Open!">P</div>
                    <!--<div class="poraz" matTooltip="Jelena : Nikola, 29.05.1991, Kraljevo Open!">I</div>
                    <div class="pobeda" matTooltip="Jelena : Nikola, 29.05.1991, Kraljevo Open!">P</div>
                    <div class="poraz" matTooltip="Jelena : Nikola, 29.05.1991, Kraljevo Open!">I</div>
                    <div class="pobeda" matTooltip="Jelena : Nikola, 29.05.1991, Kraljevo Open!">P</div>-->
            <!--    </mat-cell>
            </ng-container> -->

            <ng-container matColumnDef="kontrole" class="kontrole">
                <mat-header-cell *matHeaderCellDef class="kontrole"> <!--{{'Opcije' | translate}}--> </mat-header-cell>
                <mat-cell *matCellDef="let korisnik" class="kontrole" >

                    <!-- <button mat-icon-button color="primary" class="dugmekontrole" matTooltip="Zakaži prijateljsku!"><mat-icon>videogame_asset</mat-icon></button> -->
