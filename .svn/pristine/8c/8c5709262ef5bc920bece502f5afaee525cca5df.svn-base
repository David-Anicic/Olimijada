.sakrij
{

}

.kartica
{
  max-width: 1048px;
}

.pocetnaWrapper
{
  display: table;
  margin: 0 auto;
  padding: 26px;
}

.dugmePrikazMeceva
{
  background-color: cyan;
  border-radius: 4px;
}


.pretraga
{
  width: 100%;
}

mat-header-cell, mat-cell
{
  text-align: center;
}



.mobile-label
{
  display: none;
}

.mat-row:hover
{
  background-color: lightgray;
  transition-duration: 0.6s;
}

.dugmeResponsive
{
  width: 100%;
  /*text-align: center;*/
  background-color: red;
}

.meceviPrijave
{
  padding-left: 6px;
  padding-right: 6px;
  width: 70px;
  min-width: 70px;
  max-width: 70px;
}

@media(max-width: 901px) {

  mat-header-cell, mat-cell
  {
    text-align: left;
  }

  .mobile-label {
    width: 120px;
    display: inline-block;
    font-weight: bold;
    float: left;
  }

  .mat-header-row {
    display: none;
  }

  .mat-row {
    flex-direction: column;
    align-items: start;
    padding: 8px 24px;
  }

  .dugmeResponsive
  {
    display: inline;
    width: 100%;
    min-width: 100%;
    max-width: 100%;
    margin-top: 8px;
    float: left;
  }

  .neresponsiveDugme
  {
    display: none;
  }

  .mat-row
  {
    padding: 8px;
    margin: 0;
    height: auto!important;
    min-height: auto!important;
    max-height: auto!important;
  }

  .dugmeResponsive, mat-cell
  {
    width: 100%;
  }
}
